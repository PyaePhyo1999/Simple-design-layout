<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_pale"
    tools:context=".MainActivity">

    <include layout="@layout/home_fragment" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_navigate"
        android:paddingStart="@dimen/margin_large_2"
        android:paddingEnd="@dimen/margin_large_2"
        app:backgroundTint="@color/purple_800"
        app:itemIconSize="@dimen/margin_large"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigate" />

</androidx.constraintlayout.widget.ConstraintLayout>